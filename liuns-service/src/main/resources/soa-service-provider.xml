<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 提供SOA服务的服务端列表 -->

    <!-- 用户 -->
    <bean class="soa.ProviderFactoryBean" lazy-init="false">
        <property name="serviceItf" value="liuns.remoting.framework.liuns.service.UserService" />
        <property name="serviceObject">
            <bean class="liuns.remoting.framework.service.impl.UserServiceImpl" />
        </property>
        <property name="appKey" value="liuns-default-user" />
        <property name="weight" value="1" />
        <property name="groupName" value="default" />
        <property name="workerThreads" value="10" />
        <property name="serverPort" value="8081" />
        <property name="timeout" value="3000" />
    </bean>

    <!-- -->
    <bean class="soa.ProviderFactoryBean" lazy-init="false">
        <property name="serviceItf" value="liuns.remoting.framework.liuns.service.AddressService" />
        <property name="serviceObject">
            <bean class="liuns.remoting.framework.service.impl.AddressServiceImpl" />
        </property>
        <property name="appKey" value="iuns-default-address" />
        <property name="weight" value="1" />
        <property name="groupName" value="default" />
        <property name="workerThreads" value="10" />
        <property name="serverPort" value="8081" />
        <property name="timeout" value="3000" />
    </bean>

</beans>